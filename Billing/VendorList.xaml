<Page x:Class="Billing.VendorList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Billing"
      mc:Ignorable="d" 
      d:DesignHeight="362" d:DesignWidth="823"
      Title="VendorList" Background="White">

    <Grid>
        <DataGrid x:Name="dataGrid2" ColumnWidth="*" ItemsSource="{Binding}" AutoGenerateColumns="False"
                  CellEditEnding="dataGrid2_CellEditEnding"
                  RowEditEnding="dataGrid2_RowEditEnding"
                   SelectionChanged="dataGrid2_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Width="*" Binding="{Binding Vid}"/>
                <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Vname}"/>
                <DataGridTextColumn Header="Phone" Width="*" Binding="{Binding Vphone}"/>
                <DataGridTextColumn Header="Place" Width="*" Binding="{Binding Vplace}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
