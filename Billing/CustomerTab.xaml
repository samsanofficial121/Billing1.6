<Page x:Class="Billing.CustomerTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Billing"
      mc:Ignorable="d" 
      d:DesignHeight="594" d:DesignWidth="824"
      Title="CustomerTab" Background="White">

    <Grid>
        <Rectangle Fill="#FF028502" Stroke="Black" Margin="0,0,0,367"/>
        <Button x:Name="btn_CustomerList" Background="Transparent"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="190" Width="205" Margin="0,228,0,0" Click="btn_CustomerList_Click">
            <Image Source="Resources\CustomerList.png" Height="187" Width="202"/>
        </Button>
        <Button x:Name="btn_CustomerOrder" Background="Transparent"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="190" Width="205" Margin="207,228,0,0" Click="btn_CustomerOrder_Click">
            <Image Source="Resources\CustomerOrder.png" Height="187" Width="202"/>
        </Button>
        <Button x:Name="btn_CustomerPayment" Background="Transparent"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="190" Width="205" Margin="415,228,0,0" Click="btn_CustomerPayment_Click">
            <Image Source="Resources\CustomerPayment.png" Height="187" Width="202"/>
        </Button>
    </Grid>
</Page>
